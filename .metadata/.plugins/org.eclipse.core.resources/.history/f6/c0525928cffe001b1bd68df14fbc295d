#include <iostream>
#include <cmath>
using namespace std;
/*
 * endl tells c++ to break the line and write on a new one
 *
 *
 */
void maleTest(bool male, bool isTall);
int main() {
	bool isMale = true;
	bool tall = true;
	maleTest(isMale, tall);

	return 0;
}
// Method determines your sex and height :
void maleTest(bool male, bool isTall){
	if(male && isTall){
			cout << "You are a male who is also tall";
		}else if (male && !isTall){
			cout << "You are a short male";
		}else if(isTall && !male){
			cout << "You are not a male who is tall";
		} else{
			cout << "You are not tall and not a male";
		}
}


